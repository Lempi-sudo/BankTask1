<Window x:Class="BankTask1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankTask1"
        mc:Ignorable="d"
        Title="MainWindow" Height="430.8" Width="749.6">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
       
        <TextBlock Grid.Column="1" Grid.Row="1" Text=" Введите name, id, PriorityClass" HorizontalAlignment="Center" FontSize="17" VerticalAlignment="Bottom" TextWrapping="Wrap"/>
        <TextBox Grid.Column="1" Grid.Row="2"  Text="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged, Mode=Default}" />
        <Button Grid.Column="1" Grid.Row="3"  FontSize="27"  Content="Save"  Click="Button_Click"/>

    </Grid>
</Window>
       
           


 
        
